<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"

              android:background="@color/chargelist_bg_color"
              android:layout_height="fill_parent">

    <ImageView
            android:contentDescription="@string/image_content_description"
            android:src="@color/comm_detail_list_divider"
            android:layout_width="fill_parent"
            android:layout_marginTop="11dp"
            android:layout_height="1dp"/>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            >

        <LinearLayout
                android:background="@drawable/item_selector"
                android:clickable="true"
                android:id="@id/chargePhone"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:layout_gravity="left|center_vertical"
                android:weightSum="2">

            <TextView
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:text="话费充值"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"/>


            <TextView
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:text="快速充值，充的多送的多"
                    android:textSize="12sp"
                    android:textColor="@color/hint_text_color"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"/>
        </LinearLayout>

        <ImageView
                android:contentDescription="@string/image_content_description"
                android:id="@id/exchangeArrow"
                android:layout_width="18dp"
                android:layout_height="fill_parent"
                android:layout_gravity="right|center_vertical"
                android:clickable="true"
                android:layout_marginLeft="-31dp"
                android:scaleType="centerInside"
                android:src="@drawable/grayarrowr"/>

    </LinearLayout>

    <ImageView
            android:contentDescription="@string/image_content_description"
            android:src="@color/comm_detail_list_divider"
            android:layout_width="fill_parent"
            android:layout_height="1dp"/>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:background="@android:color/white"
            android:paddingBottom="5dp"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            >

        <LinearLayout
                android:clickable="true"
                android:id="@id/chargeAlipay"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:background="@drawable/item_selector"
                android:weightSum="2">

            <TextView
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:text="支付宝提现"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"/>


            <TextView
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:text="直接提现，快速安全"
                    android:textSize="12sp"
                    android:textColor="@color/hint_text_color"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"/>
        </LinearLayout>

        <ImageView
                android:contentDescription="@string/image_content_description"
                android:id="@id/exchangeArrow"
                android:layout_width="18dp"
                android:layout_height="fill_parent"
                android:layout_gravity="right|center_vertical"
                android:clickable="true"
                android:layout_marginLeft="-31dp"
                android:scaleType="centerInside"
                android:src="@drawable/grayarrowr"/>
    </LinearLayout>

    <ImageView
            android:contentDescription="@string/image_content_description"
            android:src="@color/comm_detail_list_divider"
            android:layout_width="fill_parent"
            android:layout_height="1dp"/>
</LinearLayout>