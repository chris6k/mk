<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_marginTop="2dp"
              android:layout_height="fill_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:background="@color/account_dashboard_back"
                    android:layout_marginTop="2dp"
                    android:layout_height="100dp">

        <TextView
                android:textColor="@android:color/white"
                android:id="@id/dashboardText"
                android:text="@string/balance_text"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:textColor="@android:color/white"
                android:id="@id/dashboardBalance"
                android:text="@string/balance_default_value"
                android:textSize="50sp"
                android:layout_toLeftOf="@id/dashboardYuan"
                android:layout_centerVertical="true"
                android:textScaleX="1.1"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"/>

        <TextView
                android:textColor="@android:color/white"
                android:id="@id/dashboardYuan"
                android:layout_alignParentRight="true"
                android:layout_alignBaseline="@id/dashboardBalance"
                android:textSize="25sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/balance_yuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout
            android:layout_marginTop="2dp"
            android:background="@color/nav_bkg"
            android:layout_width="fill_parent"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_height="50dp"
            android:weightSum="5">

        <TextView
                android:layout_weight="2"
                android:text="@string/commission_text"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_height="fill_parent"/>

        <TextView
                android:id="@id/exchangeText"
                android:clickable="true"
                android:layout_weight="2"
                android:text="@string/exchange_text"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:gravity="right|center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_height="fill_parent"/>

        <ImageView
                android:id="@id/exchangeArrow"
                android:clickable="true"
                android:layout_gravity="center_vertical"
                android:src="@drawable/arrowr_selector"
                android:layout_weight="1"
                android:paddingRight="5dp"
                android:scaleType="centerInside"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"/>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:background="@color/account_dashboard_back"
                  android:orientation="vertical"
                  android:layout_marginTop="2dp"
                  android:layout_height="wrap_content">


        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="fill_parent"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"/>

            <TextView
                    android:gravity="center"
                    android:text="@string/task_commission_text"
                    android:layout_width="fill_parent"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"/>

            <TextView
                    android:gravity="center"
                    android:text="@string/task_commission_text"
                    android:layout_width="fill_parent"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

            <TextView
                    android:text="@string/today_text"
                    android:gravity="left|center_vertical"
                    android:layout_width="fill_parent"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"/>

            <TextView
                    android:id="@id/todayCommission"
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"/>

            <TextView
                    android:id="@id/todayReward"
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

            <TextView
                    android:text="@string/yesterday_text"
                    android:gravity="left|center_vertical"
                    android:layout_width="fill_parent"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"/>

            <TextView
                    android:id="@id/yesterdayCommission"
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"/>

            <TextView
                    android:id="@id/yesterdayReward"
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/hint_text_color">

        <LinearLayout
                android:baselineAligned="false"
                android:clickable="true"
                android:layout_marginTop="2dp"
                android:background="@drawable/item_selector"
                android:id="@id/downloadApp"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="70dp">

            <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="fill_parent">

                <ImageView
                        android:contentDescription="@string/image_content_description"
                        android:paddingLeft="20dp"
                        android:src="@drawable/app"
                        android:scaleType="centerInside"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"/>
            </RelativeLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:weightSum="2">

                <TextView
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:text="@string/download_app_text"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"/>

                <TextView
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:text="@string/hint_download_app_text"
                        android:textSize="16sp"
                        android:textColor="@color/hint_text_color"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:baselineAligned="false"
                android:clickable="true"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/item_selector"
                android:id="@id/inviteFriends"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="70dp">

            <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="fill_parent">

                <ImageView
                        android:contentDescription="@string/image_content_description"
                        android:paddingLeft="20dp"
                        android:src="@drawable/share"
                        android:scaleType="centerInside"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"/>
            </RelativeLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:weightSum="2">

                <TextView
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:text="@string/invite_friends_text"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"/>

                <TextView
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:text="@string/hint_invite_friends_text"
                        android:textSize="16sp"
                        android:textColor="@color/hint_text_color"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>