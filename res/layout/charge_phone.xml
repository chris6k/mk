<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/chargelist_bg_color"
              android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            <ImageView
                    android:contentDescription="@string/image_content_description"
                    android:paddingLeft="20dp"
                    android:src="@drawable/charge_phone"
                    android:scaleType="centerInside"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

        </RelativeLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:paddingLeft="8dp"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:gravity="center_vertical"
                    android:text="@string/charge_title_text"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="12dp"
                    android:layout_gravity="left"
                    android:gravity="center_vertical"
                    android:text="@string/charge_hint_text"
                    android:textColor="@color/hint_text_color"
                    android:textSize="12sp"/>

        </LinearLayout>
    </LinearLayout>

    <ImageView
            android:src="@color/comm_detail_list_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@android:color/white">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:gravity="center_vertical"
                    android:text="@string/charge_phone_title_text"
                    android:textColor="@color/hint_text_color"
                    android:textSize="12sp"/>

            <EditText
                    android:id="@id/chargePhoneEdit"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:inputType="phone"
                    android:capitalize="none"
                    android:background="@android:color/transparent"
                    android:gravity="fill"
                    android:scrollHorizontally="true"/>
        </LinearLayout>

    </LinearLayout>

    <ImageView
            android:contentDescription="@string/image_content_description"
            android:src="@color/comm_detail_list_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@android:color/white">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:gravity="center_vertical"
                    android:text="@string/charge_count_title_text"
                    android:textColor="@color/hint_text_color"
                    android:textSize="12sp"/>

            <EditText
                    android:id="@id/chargeAmountEdit"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="center"
                    android:inputType="number"
                    android:capitalize="none"
                    android:background="@android:color/transparent"
                    android:gravity="fill"
                    android:scrollHorizontally="true"/>
        </LinearLayout>

    </LinearLayout>

    <ImageView
            android:contentDescription="@string/image_content_description"
            android:src="@color/comm_detail_list_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    <ImageView
            android:contentDescription="@string/image_content_description"
            android:src="@color/comm_detail_list_divider"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="1dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@android:color/white">


        <Button
                android:id="@id/chargeSubmitButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/charge_submit_text"
                android:textColor="@color/hint_text_color"
                android:background="@drawable/item_selector"
                android:textSize="16sp"/>


    </LinearLayout>

    <ImageView
            android:contentDescription="@string/image_content_description"
            android:src="@color/comm_detail_list_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
</LinearLayout>