<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
              android:paddingRight="10dp"
              android:orientation="vertical">
	
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:background="@android:color/white"
            android:paddingLeft="15dp"
            android:paddingTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="center_vertical"
            android:text="积分兑换比率"
            android:textColor="@color/youmi_color"
            android:textSize="14sp"/>
    </LinearLayout>  
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@android:color/white"
            android:paddingLeft="15dp"
            android:paddingTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="center_vertical"
            android:text="    1元一份 = 1元人民币"
            android:textColor="@color/buttonPressedColor"
            android:textSize="12sp"/>

     </LinearLayout>  
     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:background="@android:color/white"
            android:paddingLeft="15dp"
            android:paddingTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="center_vertical"
            android:text="如何获得积分"
            android:textColor="@color/youmi_color"
            android:textSize="14sp"/>
    </LinearLayout>  
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:background="@android:color/white"
            android:paddingLeft="15dp"
            android:paddingTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="center_vertical"
            android:lineSpacingExtra="8dp"
            android:text="    您只需免费下载安装（大多数的应用要求首次安装）并使用一次渠道推荐的应用，即可获得对应的积分奖励。本产品内所有推荐应用均为官方提供的，经过严格测试的绿色优质免费应用，您可以放心安装使用"
            android:textColor="@color/buttonPressedColor"
            android:textSize="12sp"/>

     </LinearLayout> 
     
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:background="@android:color/white"
            android:paddingLeft="15dp"
            android:paddingTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="center_vertical"
            android:text="怎么样才能够进行提款？提款有什么限制?"
            android:textColor="@color/youmi_color"
            android:textSize="14sp"/>
    </LinearLayout>  
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"
            android:paddingLeft="15dp"
            android:paddingTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="center_vertical"
            android:lineSpacingExtra="8dp"
            android:text="    只要金额大于等于10元就能够提款,支持支付宝以及话费充值"
            android:textColor="@color/buttonPressedColor"
            android:textSize="12sp"/>

     </LinearLayout>
     
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:background="@android:color/white"
            android:paddingLeft="15dp"
            android:paddingTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="center_vertical"
            android:text="提款申请后大约需要多久到账？"
            android:textColor="@color/youmi_color"
            android:textSize="14sp"/>
    </LinearLayout>  
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@android:color/white"
            android:paddingLeft="15dp"
            android:paddingTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="center_vertical"
            android:lineSpacingExtra="8dp"
            android:text="    12小时内到账"
            android:textColor="@color/buttonPressedColor"
            android:textSize="12sp"/>

     </LinearLayout>
     
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:background="@android:color/white"
            android:paddingLeft="15dp"
            android:paddingTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="center_vertical"
            android:text="获取积分注意事项"
            android:textColor="@color/youmi_color"
            android:textSize="14sp"/>
    </LinearLayout>  
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@android:color/white"
            android:paddingLeft="15dp"
            android:paddingTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="center_vertical"
            android:lineSpacingExtra="8dp"
            android:text="    1.您在下载，安装和首次使用推荐应用的过程中，不要关闭当前应用；首次实际使用推荐应用的时间不低于1分钟，才能确保您返回到当前应用时能够立即获得积分。"
            android:textColor="@color/buttonPressedColor"
            android:textSize="12sp"/>

     </LinearLayout>
     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@android:color/white"
            android:paddingLeft="15dp"
            android:paddingTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="center_vertical"
            android:lineSpacingExtra="8dp"
            android:text="    2.如果您安装的推荐应用需要免费注册，登录或阅读许可协议等操作，通常您将在成功登录一次或实际使用一次主要功能后才能获得积分。"
            android:textColor="@color/buttonPressedColor"
            android:textSize="12sp"/>

     </LinearLayout>
     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@android:color/white"
            android:paddingLeft="15dp"
            android:paddingTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="center_vertical"
            android:lineSpacingExtra="8dp"
            android:text="    3.大多数应用只有在安装您之前手机从未安装过的应用才能确保获得积分；获得完成积分后，未再次使用不可轻易删除新安装的推荐应用，否则您今后可能将无法获得更多免费积分。"
            android:textColor="@color/buttonPressedColor"
            android:textSize="12sp"/>

     </LinearLayout>
     
     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:background="@android:color/white"
            android:paddingLeft="15dp"
            android:paddingTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="center_vertical"
            android:text="邀请好友"
            android:textColor="@color/youmi_color"
            android:textSize="14sp"/>
    </LinearLayout>  
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@android:color/white"
            android:paddingLeft="15dp"
            android:paddingTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="center_vertical"
            android:lineSpacingExtra="8dp"
            android:text="    您可以通过邀请好友来获得额外的积分，您可以获得您好友获得的10%的奖励积分，好友获得的积分不变，通过不断邀请好友您就可以坐享其成，早日变成高富帅迎娶白富美"
            android:textColor="@color/buttonPressedColor"
            android:textSize="12sp"/>

     </LinearLayout>
</LinearLayout>